# OpenAI API
OPENAI_API_KEY=sk-your-api-key-here

# Platform API (currently supports Threads)
# Leave empty and set USE_MOCK_THREADS=true for testing without API
THREADS_APP_ID=your-app-id
THREADS_APP_SECRET=your-app-secret
THREADS_ACCESS_TOKEN=your-access-token
THREADS_USER_ID=your-user-id

# Mock Mode - Set to true to skip real API calls
USE_MOCK_THREADS=false

# Memory System (Mem0)
# For local development with Qdrant
QDRANT_URL=http://localhost:6333
# For PostgreSQL (optional, for Mem0 metadata)
DATABASE_URL=postgresql://user:password@localhost:5432/anima

# Agent Configuration
AGENT_NAME=AnimaAgent
LOG_LEVEL=INFO

# Rate Limiting
MAX_DAILY_POSTS=20
MAX_DAILY_REPLIES=50
MIN_INTERACTION_INTERVAL_SECONDS=300

# External Providers (Apify / Threads Toolkit)
APIFY_ENABLED=false
APIFY_API_TOKEN=
APIFY_ACTOR_ID=
APIFY_MAX_AGE_HOURS=24
APIFY_MAX_ITEMS=30
APIFY_KEYWORD=
APIFY_ACTOR_INPUT_JSON=
APIFY_USE_WEBHOOK=false

# Webhook Server (for receiving Apify/external notifications)
WEBHOOK_ENABLED=false
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080
WEBHOOK_SECRET=

THREADS_TOOLKIT_ENABLED=false
THREADS_TOOLKIT_URL=
THREADS_TOOLKIT_API_KEY=
THREADS_TOOLKIT_QUERY=
THREADS_TOOLKIT_MAX_AGE_HOURS=24
THREADS_TOOLKIT_MAX_ITEMS=30
