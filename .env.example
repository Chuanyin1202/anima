# ============================================================
# Anima - AI Social Agent Configuration
# ============================================================
# Copy this file to .env and fill in your values
# Required items are marked with [REQUIRED]

# OpenAI API [REQUIRED]
OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_MODEL=gpt-5-mini
# OPENAI_MODEL_ADVANCED=gpt-5.1

# Platform API (currently supports Threads) [REQUIRED for live mode]
# Leave empty and set USE_MOCK_THREADS=true for testing without API
THREADS_APP_ID=your-app-id
THREADS_APP_SECRET=your-app-secret
THREADS_ACCESS_TOKEN=your-access-token
THREADS_USER_ID=your-user-id
# THREADS_USERNAME=your-username

# Mock Mode - Set to true to run without real API calls
USE_MOCK_THREADS=false

# Memory System (Qdrant) [REQUIRED]
QDRANT_URL=http://localhost:6333
# For Qdrant Cloud, uncomment and set your API key:
# QDRANT_API_KEY=your-qdrant-api-key
# For PostgreSQL (optional, for Mem0 metadata storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/anima

# Agent Configuration
AGENT_NAME=AnimaAgent
# PERSONA_FILE=personas/alex.json
LOG_LEVEL=INFO

# Rate Limiting
MAX_DAILY_POSTS=20
MAX_DAILY_REPLIES=50
MIN_INTERACTION_INTERVAL_SECONDS=300

# Apify Webhook (Threads Toolkit Actor)
APIFY_ENABLED=false
APIFY_API_TOKEN=
APIFY_MAX_AGE_HOURS=24
APIFY_MAX_ITEMS=30

# Webhook Server (for receiving Apify notifications)
WEBHOOK_ENABLED=false
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080
WEBHOOK_SECRET=
